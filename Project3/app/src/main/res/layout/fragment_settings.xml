<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.tamu.team1.project3.SettingsFragment">

    <!-- TODO: ADD more settings -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borderframe"
        >
        <TextView
            android:id="@+id/swipe_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/swipe_setting"
            android:textSize="20dp"
            android:textColor="@color/dark_brown"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/swipe_toggle_button"
            android:layout_centerVertical="true"
            />
        <Switch
            android:id="@+id/swipe_toggle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            />
    </RelativeLayout>
    <TextView
        android:id="@+id/sources_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sample source 1sldkjfasjdhfkjh\nsample source 2 ldsakfalksdjflsdakj"
        android:textSize="20dp"
        android:visibility="gone"
     />
    </LinearLayout>
    <Button
        android:id="@+id/show_sources_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Show Sources"
        />
        />
</RelativeLayout>
