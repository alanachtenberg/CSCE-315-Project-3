<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="@color/light_brown"
                android:centerColor="@color/light_brown"
                android:endColor="@color/dark_brown" />
            <stroke
                android:width="4dp"
                android:color="@color/dark_brown" />
            <padding
                android:bottom="4dp"
                android:left="3dp"
                android:right="3dp"
                android:top="6dp" />
            <corners
                android:radius="4dp"/>
        </shape>
    </item>
</layer-list>